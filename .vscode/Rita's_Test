#include "Parity.h"

PARITY ParityOnBytes(char* buf, int iBufLen) {

	{
		int iSum = 0;
		int i;


		for (i = 0; i < iBufLen; i++, buf++) {
			if (*buf == '1') {
				iSum++;
			}
			else if (*buf != '0') {
				return(PAR_ERROR);
			}
		}
		if (iSum % 2 == 1) {
			return (PAR_ODD)
		}
		else {
			return (PAR_EVEN);
		}

	}
}
